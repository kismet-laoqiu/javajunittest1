<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yhy.justfortest.Activities.MainActivity">

    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="570dp">

    </FrameLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="140px">
        <RelativeLayout
            android:layout_width="68px"
            android:layout_height="match_parent"
            android:layout_marginLeft="84px">
            <TextView
                android:id="@+id/first_page_flag"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#cc579eff"/>
            <ImageView
                android:id="@+id/first_page"
                android:src="@drawable/shouye"
                android:layout_marginTop="35px"
                android:layout_width="68px"
                android:layout_height="68px" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="68px"
            android:layout_height="match_parent"
            android:layout_marginLeft="143px">
            <TextView
                android:id="@+id/jinrong_flag"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#cc579eff"/>
            <ImageView
                android:id="@+id/jinrong_page"
                android:src="@drawable/product2"
                android:layout_marginTop="35px"
                android:layout_width="68px"
                android:layout_height="68px" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/erweima"
            android:src="@drawable/erweima"
            android:layout_marginTop="35px"
            android:layout_width="80px"
            android:layout_height="72px"
            android:layout_marginLeft="137px"/>
        <RelativeLayout
            android:layout_width="68px"
            android:layout_height="match_parent"
            android:layout_marginLeft="137px">
            <TextView
                android:id="@+id/shangcheng_flag"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#cc579eff"/>
            <ImageView
                android:id="@+id/shangcheng_page"
                android:src="@drawable/shangcheng"
                android:layout_marginTop="35px"
                android:layout_width="68px"
                android:layout_height="68px" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="68px"
            android:layout_height="match_parent"
            android:layout_marginLeft="137px">
            <TextView
                android:id="@+id/wode_flag"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#cc579eff"/>
            <ImageView
                android:id="@+id/wode"
                android:src="@drawable/wode"
                android:layout_marginTop="35px"
                android:layout_width="68px"
                android:layout_height="68px" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
